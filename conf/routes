# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET        /                    controllers.Application.index()
GET        /api/0.1/tss                                                        controllers.TradingSessionStatusController.tss()
GET        /api/0.1/mc-overview/                                               controllers.MarginComponentController.mcOverview()
GET        /api/0.1/mc-overview/:clearer                                       controllers.MarginComponentController.mcOverviewWithClearer(clearer)
GET        /api/0.1/mc-overview/:clearer/:member                               controllers.MarginComponentController.mcOverviewWithClearerWithMember(clearer, member)
GET        /api/0.1/mc-overview/:clearer/:member/:account                      controllers.MarginComponentController.mcOverviewWithClearerWithMemberWithAccount(clearer, member, account)
GET        /api/0.1/mc-overview/:clearer/:member/:account/:clss                controllers.MarginComponentController.mcOverviewWithClearerWithMemberWithAccountWithClass(clearer, member, account, clss)
GET        /api/0.1/mc-detail/:clearer/:member/:account/:clss/:ccy             controllers.MarginComponentController.mcDetail(clearer, member, account, clss, ccy)
GET        /api/0.1/tmr-overview/                                              controllers.TotalMarginRequirementController.tmrOverview()
GET        /api/0.1/tmr-overview/:clearer                                      controllers.TotalMarginRequirementController.tmrOverviewWithClearer(clearer)
GET        /api/0.1/tmr-overview/:clearer/:pool                                controllers.TotalMarginRequirementController.tmrOverviewWithClearerWithPool(clearer, pool)
GET        /api/0.1/tmr-overview/:clearer/:pool/:member                        controllers.TotalMarginRequirementController.tmrOverviewWithClearerWithPoolWithMember(clearer, pool, member)
GET        /api/0.1/tmr-overview/:clearer/:pool/:member/:account               controllers.TotalMarginRequirementController.tmrOverviewWithClearerWithPoolWithMemberWithAccount(clearer, pool, member, account)
GET        /api/0.1/tmr-detail/:clearer/:pool/:member/:account/:ccy            controllers.TotalMarginRequirementController.tmrDetail(clearer, pool, member, account, ccy)
GET        /api/0.1/mss-overview/                                              controllers.MarginShortfallSurplusController.mssOverview()
GET        /api/0.1/mss-overview/:clearer                                      controllers.MarginShortfallSurplusController.mssOverviewWithClearer(clearer)
GET        /api/0.1/mss-overview/:clearer/:pool                                controllers.MarginShortfallSurplusController.mssOverviewWithClearerWithPool(clearer, pool)
GET        /api/0.1/mss-overview/:clearer/:pool/:member                        controllers.MarginShortfallSurplusController.mssOverviewWithClearerWithPoolWithMember(clearer, pool, member)
GET        /api/0.1/mss-overview/:clearer/:pool/:member/:clearingCcy           controllers.MarginShortfallSurplusController.mssOverviewWithClearerWithPoolWithMemberWithClearingCcy(clearer, pool, member, clearingCcy)
GET        /api/0.1/mss-detail/:clearer/:pool/:member/:clearingCcy/:ccy        controllers.MarginShortfallSurplusController.mssDetail(clearer, pool, member, clearingCcy, ccy)


# Map static resources from the /public folder to the /assets URL path
GET        /                                                                   controllers.Assets.at(path="/public", file="index.html")
GET        /*file                                                              controllers.Assets.at(path="/public", file)
